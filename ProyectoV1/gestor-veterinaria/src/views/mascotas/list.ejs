<h1 class="mb-4"><%= title %></h1>

<a href="/mascotas/crear" class="btn btn-primary mb-3">Registrar Nueva Mascota</a>

<% if(mascotas.length > 0) { %>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Especie</th>
                    <th>Raza</th>
                    <th>Fecha Nacimiento</th>
                    <th>Due√±o</th>
                    <th>Observaciones</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% mascotas.forEach(function(mascota) { %>
                    <tr>
                        <td><%= mascota.id %></td>
                        <td><%= mascota.nombre %></td>
                        <td><%= mascota.especie %></td>
                        <td><%= mascota.raza %></td>
                        <td><%= mascota.fechaNacimiento ? mascota.fechaNacimiento.toLocaleDateString('es-ES') : 'N/A' %></td>
                        <td><%= mascota.dueno ? mascota.dueno.nombre + ' ' + mascota.dueno.apellido : 'Desconocido' %></td>
                        <td><%= mascota.observaciones %></td>
                        <td>
                            <a href="/mascotas/editar/<%= mascota.id %>" class="btn btn-warning btn-sm me-2">Editar</a>
                            <form action="/mascotas/eliminar/<%= mascota.id %>" method="POST" style="display: inline;" onsubmit="return confirm('Estas seguro de que quieres eliminar a <%= mascota.nombre %>?');">
                                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
<% } else { %>
    <div class="alert alert-info" role="alert">
        No hay mascotas.
    </div>
<% } %>