<h1 class="mb-4"><%= title %></h1>

<% if (error) { %>
    <div class="alert alert-danger" role="alert">
        <%= error %>
    </div>
<% } %>

<form action="/duenos/crear" method="POST">
    <div class="mb-3">
        <label for="nombre" class="form-label">Nombre:</label>
        <input type="text" class="form-control" id="nombre" name="nombre" value="<%= typeof dueno !== 'undefined' ? dueno.nombre : '' %>" required>
    </div>
    <div class="mb-3">
        <label for="apellido" class="form-label">Apellido:</label>
        <input type="text" class="form-control" id="apellido" name="apellido" value="<%= typeof dueno !== 'undefined' ? dueno.apellido : '' %>" required>
    </div>
    <div class="mb-3">
        <label for="telefono" class="form-label">Teléfono:</label>
        <input type="tel" class="form-control" id="telefono" name="telefono" value="<%= typeof dueno !== 'undefined' ? dueno.telefono : '' %>" required>
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email:</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= typeof dueno !== 'undefined' ? dueno.email : '' %>" required>
    </div>
    <div class="mb-3">
        <label for="direccion" class="form-label">Dirección:</label>
        <input type="text" class="form-control" id="direccion" name="direccion" value="<%= typeof dueno !== 'undefined' ? dueno.direccion : '' %>" required>
    </div>
    <button type="submit" class="btn btn-success">Guardar Dueño</button>
    <a href="/duenos" class="btn btn-secondary ms-2">Cancelar</a>
</form>