<h1 class="mb-4"><%= title %></h1>
<a href="/duenos/crear" class="btn btn-primary mb-3">Registrar Nuevo Dueño</a>
<% if(duenos.length > 0) { %>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Teléfono</th>
                    <th>Email</th>
                    <th>Dirección</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% duenos.forEach(function(dueno) { %>
                    <tr>
                        <td><%= dueno.id %></td>
                        <td><%= dueno.nombre %></td>
                        <td><%= dueno.apellido %></td>
                        <td><%= dueno.telefono %></td>
                        <td><%= dueno.email %></td>
                        <td><%= dueno.direccion %></td>
                        <td>
                            <a href="/duenos/editar/<%= dueno.id %>" class="btn btn-warning btn-sm me-2">Editar</a>
                            <form action="/duenos/eliminar/<%= dueno.id %>" method="POST" style="display: inline;" onsubmit="return confirm('¿Estas seguro de que quieres eliminar a <%= dueno.nombre %> <%= dueno.apellido %>?')">
                                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
    <% } else { %>
        <div class="alert alert-info" role="alert">
            No hay dueños registrados.
        </div>
    <% } %>